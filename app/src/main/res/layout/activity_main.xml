<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кількість вугілля (т)"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/coalInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Введіть кількість вугілля"
        android:minHeight="48dp" /> <!-- Додано мінімальну висоту -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кількість мазуту (т)"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/oilInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Введіть кількість мазуту"
        android:minHeight="48dp" /> <!-- Додано мінімальну висоту -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кількість природного газу (м3)"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/gasInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Введіть кількість газу"
        android:minHeight="48dp" /> <!-- Додано мінімальну висоту -->

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Розрахувати"
        android:contentDescription="Кнопка для розрахунку валових викидів" />

    <TextView
        android:id="@+id/resultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:maxLines="5"
        android:layout_marginTop="16dp" />

</LinearLayout>
